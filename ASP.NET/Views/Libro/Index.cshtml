@model IEnumerable<ASP.NET.Models.Libro>

@{
    ViewBag.Title = "Lista de Libros";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Crear nuevo", "Agregar")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edicion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadPaginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CiudadPais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaEdicion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Edicion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadPaginas)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editorial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CiudadPais)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaEdicion)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "aElimina" })
                </td>
            </tr>
        }

    </table>
</body>
</html>
@*En este script se pregunta s quiere eliminar. esta incluido desde el Layout y usa la clase declara arriba aElimina*@
@section scripts {
    <script>
        $(".aElimina").click(function (event) {
            if (!confirm('Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        });
    </script>
}